<div class="mt-4">
    <h3>
        Tạo Bài học{{slug}}
    </h3>

    <form method="POST" action="/courses/{{slug}}/store">
        <div class="form-group">
            <input type="hidden" class="form-control" id="courseID" name="courseID" value="{{slug}}">
        </div>
        <div class="form-group">
            <label for="name">Tên bài giảng</label>
            <input type="text" class="form-control" id="name" name="name">

        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">

        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID">

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>