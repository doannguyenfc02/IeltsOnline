<div class="mt-4">
    <div>
      <h3>Quản Lý tài khoản</h3>
      <a href="/management/users/create" class="btn btn-primary">Thêm tài khoản</a>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">TT</th>
                <th scope="col">Họ và tên</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th scope="col">Loại tài khoản</th>
                {{!-- <th scope="col" colspan="2">Thời gian tạo</th> --}}
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                {{!-- <th scope="row">1</th> --}}
                
                <td>
                  <a href="/management/users/{{this._id}}/edit">{{this.fullname}}</a>
                  </td>
                <td>{{this.email}}</td>
                <td>{{this.username}}</td>
                <td>{{this.role}}</td>
                {{!-- <td>{{this.createdAt}}</td> --}}
                <td>
                    <a href="/management/users/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-user-modal">Xóa</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Bạn chưa có tài khoản nào.
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Confirm delete user --}}
<div id="delete-user-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa khóa học này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-user" type="button" class="btn btn-danger">Xóa bỏ</button>
        
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-user-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var userId;
        var deleteForm = document.forms['delete-user-form'];
        var btnDeleteUser = document.getElementById('btn-delete-user');

        // When dialog confirm clicked
        $('#delete-user-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            userId = button.data('id');
            console.log(userId);
            
        });

        console.log(btnDeleteUser);

        // When delete user btn clicked
        btnDeleteUser.onclick=function(){
          deleteForm.action= '/management/users/' + userId + '?_method=DELETE';
          deleteForm.submit();
        }

    });
</script>